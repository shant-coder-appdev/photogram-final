<div>
  <div>
    <h1>
      Photo #<%= @the_photo.id %> details
    </h1>
    <div>
      <div>
        <a href="/photos">
          Go back
        </a>
      </div>
    </div>
    <dl>
      <dt>
        Image
      </dt>
      <dd>
        <%= @the_photo.image %>
      </dd>
      <dt>
        Caption
      </dt>
      <dd>
        <%= @the_photo.caption %>
      </dd>
      <dt>
        Owner
      </dt>
      <dd>
        <%= @the_photo.poster.username %>
      </dd>
      <dt>
        Posted
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.created_at) %> ago
      </dd>
      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_photo.updated_at) %> ago
      </dd>
      <dt>
        Likes count
      </dt>
      <dd>
        <%= @the_photo.likes_count %>
      </dd>
      <dt>
        Comments count
      </dt>
      <dd>
        <%= @the_photo.comments_count %>
      </dd>
      <dt>
        Fans
      </dt>
      <dd>
        <%= @the_photo.fan_list %>
      </dd>
      <dt>
        Add a fan
      </dt>
      <% if @the_photo.fans == nil %>
        <form action="/insert_like" method="post">
          <input type="hidden" name="query_fan_id" value="<%= @current_user.id %>">
          <input type="hidden" name="query_photo_id" value="<%= @the_photo.id %>">
          <button>Like</button>
        </form>
      <% else %>
        <a href="/delete_like/<%= @the_photo.id %>">
          Unlike
        </a>
      <% end %>

      





      <% if @current_user != nil %>
        <% the_username = @the_photo.poster.username %>
        <% if the_username == @current_user.username %>
          <div>
            <a href="/delete_photo/<%= @the_photo.id %>">
              Delete this photo
            </a>
          </div>
        </a>
      <% end %>
    <% end %>
  </dl>
</div>
</div>
<h2>Comments</h2>
<table>
  <tr>
    <th>Commenter</th>
    <th>Comment</th>
    <th>Posted</th>
  </tr>
  <% @the_photo.comments.each do |comment| %>
    <tr>
      <td>
        <%= comment.commenter.username %>
      </td>
      <td>
        <%= comment.body %>
      </td>
      <td>
        <%= comment.created_at %>
      </td>
    </tr>
  <% end %>
</table>
<h3>Add a new comment</h3>
<form action="/insert_comment">
  <input id="browser_venue_id" type="hidden" value="<%= @the_photo.id %>" name="query_photo_id">
  <input id="browser_author_id" type="hidden" name="query_author_id">
  <label for="browser_comment">Comment</label>
  <textarea id="browser_comment" name="query_body" placeholder="Enter a comment..."></textarea>
  <button>Add comment</button>
</form>
