<h1><#%= @user.id %></h1>
<dl>
  <dt>Private</dt>
  <dd><%= @user.private %></dd>
  <dt>Followers</dt>
  <dd><%= @user.followers.count %></dd>
  <dt>Following</dt>
  <dd><%= @user.following.count %></dd>
</dl>
<nav>
  <ul>
    <li>
      <a href="/users/<%= @user.username %>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @user.id %>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @user.id %>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @user.id %>/discover">Discover</a>
    </li>
  </ul>
</nav>
<h2>Liked photos (<%= @user.liked_photos.count %>)</h2>
<table border="1">
  <tr>
    <th>
      Image
    </th>
    <th>
      Owner
    </th>
    <th>
      Caption
    </th>
    <th>
      Posted
    </th>
    <th>
      Likes
    </th>
    <th></th>
  </tr>
  <% @user.liked_photos.each do |photo| %>
    <tr>
      <td>
        <img src="<%= photo.image %>">
      </td>
      <td>
        <%= photo.poster.username %>
      </td>
      <td>
        <%= photo.caption %>
      </td>
      <td>
        <%= time_ago_in_words(photo.created_at) %>
      </td>
      <td>
        <%= photo.likes_count %>
      </td>
      <td>
        <a href="/photos/<%= photo.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>
